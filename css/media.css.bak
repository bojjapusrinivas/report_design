/* Tablet Portrait size to standard 960 (devices and browsers)
====================================================================== */
@media only screen and (min-width: 768px) and (max-width: 959px) {

	#wrapper, #footer, #footer-bottom { width: 714px }

	#navigation {width: 734px }


.sig_in{width:25%; height:25px !important; margin:0 auto; text-align:center; border:#FFF solid 2px; padding:10px 15px; background:#646464; display:block; color:#f5da9b; font-weight:bold; clear:both; overflow:hidden; margin-bottom:25px; margin-top:25px}
.sig_in:hover {background:#999; color:#000}

input{border:#CCC solid 1px; width:100%}

.left_pan {width:50%; overflow:hidden; float:left}
.right_pan{width:45%; overflow:hidden; padding:4px; background:rgba(255,255,255,0.7); float:right; margin-top:10px}
}
	


/* All Mobile Sizes (devices and browsers)
====================================================================== */
@media only screen and (max-width: 767px) {

p, li{text-align:justify}

.sig_in{width:50%; height:25px !important; margin:0 auto; text-align:center; border:#FFF solid 2px; padding:10px 15px; background:#646464; display:block; color:#f5da9b; font-weight:bold; clear:both; overflow:hidden; margin-bottom:25px; margin-top:25px}
.sig_in:hover {background:#999; color:#000}

.table_innerbox{width:100%; float:none !important}

.table_leftblock >ul, .table_rightblock >ul {padding-left:5px !important; list-style: none}

.table_leftblock >ul li, .table_rightblock >ul li{margin:0 !important}

.left_pan {width:100%; overflow:hidden; float:left}
.right_pan{width:100%; overflow:hidden; padding:4px; background:rgba(255,255,255,0.7); float:right; margin-top:10px}
	
}


/* Mobile Landscape Size to Tablet Portrait (devices and browsers)
====================================================================== */
@media only screen and (min-width: 480px) and (max-width: 767px) {

	#wrapper, #footer, #footer-bottom { width: 420px; }



	
}


/* Mobile Portrait Size to Mobile Landscape Size (devices and browsers)
====================================================================== */
@media only screen and (max-width: 479px) {
	#wrapper,	#footer, #footer-bottom { width: 320px }
	
	input{border:#CCC solid 1px; width:80%}

	

}

